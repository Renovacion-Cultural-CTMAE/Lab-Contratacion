<div id="<%= dom_id email %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Cedula de contratistas:</strong>
    <%= email.cedula_de_contratistas %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Correo:</strong>
    <%= email.correo %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Activo:</strong>
    <%= email.activo %>
  </p>

  <% if action_name != "show" %>
  <%= link_to "Show this email", email, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to email, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
  <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
  <span
    class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Mostrar
    este correo
    <% end %>
    <%= link_to edit_email_path(email), class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
    <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
    <span
      class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Editar
      este correo
      <% end %>
      <hr class="mt-6">
      <% end %>
</div>
