<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @previous_study %>

    <%= link_to 'Edit this previous_study', edit_previous_study_path(@previous_study), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this previous_study', previous_study_path(@previous_study), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to previous_studies', previous_studies_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-8">
    <div class="mt-8 mb-8">
      <%= link_to new_program_path, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
        <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
        <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Agregar programas
      <% end %>
      <%= link_to new_curriculum_design_path, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
        <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
        <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Agregar dise√±o curricural
      <% end %>
    </div>
  </div>
</div>
