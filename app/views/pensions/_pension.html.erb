<div id="<%= dom_id pension %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Cedula contratista:</strong>
    <%= pension.cedula_contratista %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Nit de la entidad:</strong>
    <%= pension.nit_de_la_entidad %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Nombre la entidad:</strong>
    <%= pension.nombre_la_entidad %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Telefono de la entidad:</strong>
    <%= pension.telefono_de_la_entidad %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Ciudad de la entidad:</strong>
    <%= pension.ciudad_de_la_entidad %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Correo de la entidad:</strong>
    <%= pension.correo_de_la_entidad %>
  </p>

  <% if action_name != "show" %>
  <%= link_to pension, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
  <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
  <span
    class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Mostrar
    pension
    <% end %>
    <%= link_to edit_pension_path(pension), class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
    <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
    <span
      class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Editar
      pension
      <% end %>
      <hr class="mt-6">
      <% end %>
</div>
