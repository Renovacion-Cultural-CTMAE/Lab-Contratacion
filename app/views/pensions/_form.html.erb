<%= form_with(model: pension, class: "contents") do |form| %>
  <% if pension.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(pension.errors.count, "error") %> prohibited this pension from being saved:</h2>

      <ul>
        <% pension.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  

  <div class="my-5">
    <%= form.label :id_contratista %>
    <%= form.select :contractor_id, Contractor.ids %>
  </div>

  <div class="my-5">
    <%= form.label :cedula_contratista %>
    <%= form.number_field :cedula_contratista, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :nit_de_la_entidad %>
    <%= form.number_field :nit_de_la_entidad, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :nombre_la_entidad %>
    <%= form.text_field :nombre_la_entidad, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :telefono_de_la_entidad %>
    <%= form.text_field :telefono_de_la_entidad, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :ciudad_de_la_entidad %>
    <%= form.text_field :ciudad_de_la_entidad, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :correo_de_la_entidad %>
    <%= form.text_field :correo_de_la_entidad, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit "Enviar", class: "rounded-lg py-3 px-5 bg-blue-600 text-naranja inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
