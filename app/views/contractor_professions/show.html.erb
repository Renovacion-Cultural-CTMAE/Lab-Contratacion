<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @contractor_profession %>

    <%= link_to 'Edit this contractor_profession', edit_contractor_profession_path(@contractor_profession), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to contractor_profession_path(@contractor_profession), method: :delete, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
           <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
    <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Eliminar los datos de esta profesion
        <% end %>
    </div>
    <%= link_to 'Back to contractor_professions', contractor_professions_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
