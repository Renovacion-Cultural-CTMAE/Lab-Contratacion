<div id="<%= dom_id payment %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Numero contrato:</strong>
    <%= payment.numero_contrato %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Numero pago:</strong>
    <%= payment.numero_pago %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Fecha pago:</strong>
    <%= payment.fecha_pago %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Valor pago:</strong>
    <%= payment.valor_pago %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Observaciones:</strong>
    <%= payment.observaciones %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this payment", payment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this payment', edit_payment_path(payment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
