<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @equal_object %>

    <%= link_to 'Editar este formato de objetos iguales', edit_equal_object_path(@equal_object), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
    <!--<%= #button_to 'Destroy this equal_object', equal_object_path(@equal_object), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>-->
    </div>
    <%= link_to 'Generar reporte', "/equal_objects/#{@equal_object.id}.pdf", class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Regresar', equal_objects_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
