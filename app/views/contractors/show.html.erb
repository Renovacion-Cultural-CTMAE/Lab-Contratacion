<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %>
    </p>
    <% end %>

    <%= render @contractor %>
  <div class="renovacion">
    <%= link_to edit_contractor_path(@contractor), class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
      <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
      <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Editar
        este contratista
    <% end %>

    <div class="inline-block ml-2">
      <%= button_to 'Eliminar datos de este contratista', contractor_path(@contractor), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to contractors_path, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
      <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
      <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Regresar
      <% end %>

    <%= link_to '#', class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring", onclick: 'window.print();return false;'  do %>
      <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
      <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Imprimir
    <% end %>
     <hr class="mt-8">

      <div class="mt-8 mb-8">
        <%= link_to new_pension_path, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
          <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
          <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Agregar datos de la pension
        <% end %>
        <%= link_to new_health_path, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
          <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
          <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Agregar datos de la EPS
        <% end %>
        <%= link_to new_email_path, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
          <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
            <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Agregar datos de los correos
        <% end %>
      </div>
      <div class="mt-8 mb-8">
        <%= link_to new_phone_path, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
          <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
          <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Agregar datos de los telefonos
        <% end %>
        <%= link_to new_contractor_profession_path, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
          <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
          <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Agregar datos de las profesiones de los contratistas
        <% end %>
      </div>
      <hr class="mt-8">
      <div class="mt-8 mb-8">
       <%= link_to new_contract_path, class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring" do %>
          <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
          <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Agregar contratos a el contratista
        <% end %>
      </div>
  </div>
  </div>
  </div>
