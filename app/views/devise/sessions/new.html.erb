<h2>Iniciar Sesion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :Correo_electronico %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"ingresa tu correo electronico" %>
  </div>

  <div class="field">
    <%= f.label :Contraseña %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"Ingresa tu contraseña" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :Recordarme %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Iniciar Sesion" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
